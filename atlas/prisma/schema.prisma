
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Location {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  locationId  Int     @unique // âœ¨ FIX: Added a field to store your numeric ID
  name        String
  coordinates Float[]
  hours       String
  status      String
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}